
<div class="row">
    <div class="col-md-6  mx-auto">
        <div class="card card-body">
            <img src="/img/logo.jpg" alt="" class="logo ">
            <h3  class="text-center">注册</h3>
            <form action="/users/register" method="POST">
                <div class="form-group">
                    <label for="name">用户名</label>
                    <input type="text"  value="{{name}}"  name="name" required  class="form-control">
                </div>
                <div class="form-group">
                    <label for="email">邮箱</label>
                    <input type="email"  value="{{email}}"name="email" required  class="form-control">
                </div>
                 <div class="form-group">
                    <label for="password">密码</label>
                    <input type="password" value="{{password}}" name="password" required  class="form-control">
                </div>
                <div class="form-group">
                    <label for="password2">确认密码</label>
                    <input type="password" value="{{password2}}" name="password2" required  class="form-control">
                </div>
                <button type="submit"  class="btn btn-primary">注册</button>
            </form>
        </div>
        
    </div>
</div>